<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_industry_sector_form" model="ir.ui.view">
            <field name="name">partner.industry.form</field>
            <field name="model">res.partner.industry</field>
            <field name="arch" type="xml">
                <form string="Industry Sector">
                    <field name="name"/>
                </form>
            </field>
        </record>

        <record id="view_industry_sector_tree" model="ir.ui.view">
            <field name="name">partner.industry.tree</field>
            <field name="model">res.partner.industry</field>
            <field name="arch" type="xml">
                <tree string="Industry Sectors">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_res_partner_industry" model="ir.actions.act_window">
            <field name="name">Industry Sectors</field>
            <field name="res_model">res.partner.industry</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help">
              <p class="oe_view_nocontent_create">
                Click to create a new industry sector.
              </p><p>
                Manage industry sectors used to better categorize partners.
              </p>
            </field>
        </record>

        <menuitem action="action_res_partner_industry" 
            id="menu_res_partner_industry"
            parent="base.menu_config_address_book"/>


        <record id="view_partner_form_industry" model="ir.ui.view">
            <field name="name">partner.view.form.industry</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name="industry_ids" widget="many2many_tags"
                        placeholder="Industry sectors..."/>
                </field>
            </field>
        </record>

    </data>
</openerp>

