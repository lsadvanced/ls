<?xml version="1.0" ?>
<openerp>
  <data>
    <record model="ir.ui.view" id="view_partner_form_accounts">
            <field name="name">partner.accounts</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Sales &amp; Purchases']/group" position="after">
                    <group name="accounts"  attrs="{'invisible': [('is_company','=',False)]}" string="Sales Accounts">
                      <field name="account_ids" mode="tree" nolabel="1">
                        <tree>
                          <field name="name" string="Name"/>
                          <field name="parent_id" string="Company"/>
                          <field name="function" string="Function"/>
                          <field name="department" string="Department"/>                         
                        </tree>
                      </field>
                   </group>
                </xpath>
            </field>
        </record>
  </data>
</openerp>


