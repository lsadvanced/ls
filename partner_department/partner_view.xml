<?xml version="1.0" ?>
<openerp>
  <data>
    <record model="ir.ui.view" id="view_partner_form_accounts">
            <field name="name">partner.accounts</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='function']" position="after">
                  <field name="department" attrs="{'invisible': [('is_company','=',True)]}" string="Department"  />
                </xpath>
            </field>
        </record>
  </data>
</openerp>


